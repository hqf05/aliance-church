generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hymn {
  id        Int     @id @default(autoincrement())
  title     String
  verses    Json
  chorus    Json?
  formatted Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt  // ✅ هذا هو السطر الذهبي
}

enum Role {
  ADMIN
  EDITOR
}
